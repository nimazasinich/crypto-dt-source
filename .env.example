# API Keys Configuration
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to git!

# ==================== PRIMARY: HuggingFace Space ====================
HF_API_TOKEN=your_huggingface_token_here
HF_SPACE_BASE_URL=https://really-amin-datasourceforcryptocurrency.hf.space
HF_SPACE_WS_URL=wss://really-amin-datasourceforcryptocurrency.hf.space/ws

# ==================== FALLBACK: Blockchain Explorers ====================
TRONSCAN_API_KEY=your_tronscan_key_here
BSCSCAN_API_KEY=your_bscscan_key_here
ETHERSCAN_API_KEY=your_etherscan_key_here

# ==================== FALLBACK: Market Data ====================
COINMARKETCAP_API_KEY=your_coinmarketcap_key_here

# ==================== FALLBACK: News ====================
NEWSAPI_KEY=your_newsapi_key_here
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here

# ==================== Model Configuration ====================
MODEL_CONFIDENCE_THRESHOLD=0.70
GAP_FILL_ENABLED=true
CACHE_TTL_SECONDS=30
BATCH_PREDICTION_MAX=100

# ==================== Health Monitoring ====================
HEALTH_ERROR_THRESHOLD=3
HEALTH_COOLDOWN_SECONDS=300
HEALTH_RECOVERY_COUNT=2
HEALTH_AUTO_REINIT=true
HEALTH_REINIT_COOLDOWN=600

# ==================== Gap Filling ====================
MAX_GAP_SIZE=100
INTERPOLATION_METHOD=linear
CONFIDENCE_DECAY_FACTOR=0.95
USE_AI_SYNTHESIS=true
FALLBACK_TO_EXTERNAL=true
