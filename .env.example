# =============================================================================
# Cryptocurrency API Monitor - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your API keys
# For Hugging Face Spaces, add these as Repository Secrets instead

# Block Explorer APIs
# ---------------------
ETHERSCAN_KEY=your_etherscan_api_key_here
ETHERSCAN_BACKUP_KEY=your_backup_etherscan_key
BSCSCAN_KEY=your_bscscan_api_key_here
TRONSCAN_KEY=your_tronscan_api_key_here

# Market Data APIs
# -----------------
CMC_KEY=your_coinmarketcap_api_key_here
CMC_BACKUP_KEY=your_backup_cmc_key
CRYPTOCOMPARE_KEY=your_cryptocompare_api_key
COINGECKO_KEY=your_coingecko_key_optional

# News APIs
# ----------
NEWSAPI_KEY=your_newsapi_key_here
CRYPTOPANIC_KEY=your_cryptopanic_key_optional

# RPC Providers (Optional - most are public)
# --------------------------------------------
INFURA_KEY=your_infura_project_id
ALCHEMY_KEY=your_alchemy_api_key
QUICKNODE_KEY=your_quicknode_key

# On-Chain Analytics (Optional)
# -------------------------------
GLASSNODE_KEY=your_glassnode_key
DUNE_KEY=your_dune_analytics_key
COVALENT_KEY=your_covalent_key
MORALIS_KEY=your_moralis_key

# Whale Tracking (Optional)
# ---------------------------
WHALEALERT_KEY=your_whale_alert_key
NANSEN_KEY=your_nansen_key

# Sentiment APIs (Optional)
# ---------------------------
LUNARCRUSH_KEY=your_lunarcrush_key

# Database Configuration
# ------------------------
DATABASE_PATH=data/health_metrics.db
DATABASE_RETENTION_DAYS=7

# Scheduler Configuration
# -------------------------
SCHEDULER_INTERVAL_MINUTES=5
SCHEDULER_MAX_CONCURRENT=10
SCHEDULER_TIMEOUT_SECONDS=10

# Cache Configuration
# --------------------
CACHE_TTL_SECONDS=60
CACHE_ENABLED=true

# Logging Configuration
# -----------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Hugging Face Spaces Configuration
# ------------------------------------
HF_SPACE_NAME=crypto-api-monitor
HF_USERNAME=your_username_here
HF_AUTO_REFRESH_SECONDS=30

# Feature Flags
# --------------
ENABLE_BACKGROUND_SCHEDULER=true
ENABLE_INCIDENT_DETECTION=true
ENABLE_ALERT_SYSTEM=true
ENABLE_DATA_EXPORT=true

# FastAPI Backend Configuration
# -------------------------------
# Optional: API authentication tokens (comma-separated)
API_TOKENS=

# Optional: IP whitelist for API access (comma-separated)
ALLOWED_IPS=

# Optional: Database URL for FastAPI backend
DATABASE_URL=sqlite:///./crypto_monitor.db

# Optional: Server port
PORT=7860
