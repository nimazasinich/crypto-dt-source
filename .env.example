# ============================================================================
# Environment Variables for Crypto API Monitoring System
# Copy this file to .env and fill in your actual API keys
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=production
LOG_LEVEL=info
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=7860
WORKERS=1

# Database
DATABASE_PATH=data/api_monitor.db

# ============================================================================
# API Keys - Blockchain Explorers
# ============================================================================

# Etherscan (Ethereum)
# Get your key at: https://etherscan.io/myapikey
ETHERSCAN_KEY_1=YOUR_ETHERSCAN_API_KEY_HERE
ETHERSCAN_KEY_2=YOUR_SECOND_ETHERSCAN_KEY_OPTIONAL

# BscScan (Binance Smart Chain)
# Get your key at: https://bscscan.com/myapikey
BSCSCAN_KEY=YOUR_BSCSCAN_API_KEY_HERE

# TronScan (Tron)
# Get your key at: https://tronscan.org
TRONSCAN_KEY=YOUR_TRONSCAN_API_KEY_HERE

# ============================================================================
# API Keys - Market Data
# ============================================================================

# CoinMarketCap
# Get your key at: https://pro.coinmarketcap.com/signup
COINMARKETCAP_KEY_1=YOUR_COINMARKETCAP_API_KEY_HERE
COINMARKETCAP_KEY_2=YOUR_SECOND_CMC_KEY_OPTIONAL

# CryptoCompare
# Get your key at: https://www.cryptocompare.com/cryptopian/api-keys
CRYPTOCOMPARE_KEY=YOUR_CRYPTOCOMPARE_API_KEY_HERE

# ============================================================================
# API Keys - News & Sentiment
# ============================================================================

# NewsAPI
# Get your key at: https://newsapi.org/register
NEWSAPI_KEY=YOUR_NEWSAPI_KEY_HERE

# ============================================================================
# API Keys - AI & ML Services
# ============================================================================

# Hugging Face
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_KEY=YOUR_HUGGINGFACE_TOKEN_HERE

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true

# ============================================================================
# Timezone
# ============================================================================
TZ=UTC
