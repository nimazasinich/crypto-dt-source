# Synchronization Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# GitHub Configuration
# =============================================================================

# GitHub Personal Access Token
# Get one from: https://github.com/settings/tokens
# Requires: repo, write:packages scopes
GITHUB_TOKEN=your_github_token_here

# GitHub Repository (format: owner/repo)
# Example: myusername/crypto-project
GITHUB_REPO=owner/repository

# =============================================================================
# HuggingFace Configuration
# =============================================================================

# HuggingFace API Key/Token (optional, but recommended for higher rate limits)
# Get one from: https://huggingface.co/settings/tokens
HF_API_KEY=your_huggingface_api_key_here
HF_API_TOKEN=your_huggingface_api_key_here  # Alternative name

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL for sync data storage
# SQLite (default):
DATABASE_URL=sqlite:///./sync_database.db

# PostgreSQL (for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/sync_db

# MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/sync_db

# =============================================================================
# Sync Configuration
# =============================================================================

# Default Git branch to sync
DEFAULT_BRANCH=main

# Default commit message
DEFAULT_COMMIT_MESSAGE=Sync with Hugging Face models and datasets

# Report directory (default: /workspace/sync_reports)
SYNC_REPORT_DIR=/workspace/sync_reports

# =============================================================================
# Optional: External Service API Keys
# =============================================================================

# NewsAPI (for news aggregation)
NEWSAPI_KEY=your_newsapi_key_here

# CryptoPanic (for crypto news)
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here
